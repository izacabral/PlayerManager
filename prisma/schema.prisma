generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id @default(uuid())
  name      String
  nickname  String?
  createdAt DateTime @default(now())

  Skills   Skills @relation(fields: [skillsId], references: [id])
  skillsId String
}

model Skills {
  id       String @id @default(uuid())
  strength Int
  speed    Int
  driblle  Int?

  player Player[]
}
